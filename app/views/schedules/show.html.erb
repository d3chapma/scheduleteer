<p id="notice"><%= notice %></p>

<p>
  <strong>Event:</strong>
  <%= @schedule.event.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @schedule.name %>
</p>

<p>
  <strong>Start on:</strong>
  <%= @schedule.start_on %>
</p>

<p>
  <strong>End on:</strong>
  <%= @schedule.end_on %>
</p>

<table>
  <thead>
    <tr>
      <th></th>
      <% @event.jobs.each do |job| %>
        <th><%= job.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @schedule.days.each do |day| %>
      <tr>
        <td><%= day.date.strftime('%b %d') %></td>
        <% @event.jobs.count.times do %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_event_schedule_path(@event, @schedule) %> |
<%= link_to 'Back', event_path(@event) %>
