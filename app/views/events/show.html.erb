<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<h1>Listing volunteers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.name %></td>
        <td><%= link_to 'Edit', edit_event_volunteer_path(@event, volunteer) %></td>
        <td><%= link_to 'Destroy', [@event, volunteer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Volunteer', new_event_volunteer_path(@event) %>

<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
